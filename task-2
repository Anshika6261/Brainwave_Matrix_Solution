    <script>
      function clickToChange() {
        let click = document.getElementById("first");
        if (
          first.src ==
          "https://rukminim1.flixcart.com/fk-p-flap/3376/560/image/0735712fe84c602d.jpg?q=50"
        ) {
          first.src = "Screenshot 2024-06-11 154002.png";
        } else {
          first.src =
            "https://rukminim1.flixcart.com/fk-p-flap/3376/560/image/0735712fe84c602d.jpg?q=50";
        }
      }
    </script>
